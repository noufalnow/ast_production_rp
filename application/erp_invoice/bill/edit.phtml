function zerofillPaisa(el)
{
	var length = $(el).val().length;

	if(length==0)
		$(el).val('000');
	else if(length==1)
		$(el).val('00'+$(el).val());
	else if(length==2)
		$(el).val('0'+$(el).val());

}


$('body').on('change', 'input.baisa', function() {
	if($(this).val().length > 0)
	{
		$(this).val($(this).val()*1);
	}
	zerofillPaisa(this);
});

function showTotal(index) {

	var qty = parseFloat($("input[name='qty[" + index + "]").val());
	var amt = parseFloat($("input[name='amount[" + index + "]").val() + '.'
			+ $("input[name='baisa[" + index + "]").val());

	if (isNaN(qty))
		var qty = 0;

	if (isNaN(amt))
		var amt = 0;

	$("input[name='total_[" + index + "]").val(amt * qty);
	$("input[name='total_[" + index + "]").next('div').html(
			parseFloat(amt * qty).toFixed(3));
	
}

function enableVat(e) { 
    if ($('#vatoption1').is(':checked')) { 
        $('#vatgroup').show(); 
        calculateVAT(); 
        showNetAmount(); 
         
    } else { 
        $('#vatgroup').hide(); 
        $('#vatamount').val(''); 
        showNetAmount(); 
    } 
} 


/** 
 * showGrandTotal() 
 * → Calculates total of all items and updates #grandT. 
 * → Also triggers VAT and Net Total recalculations. 
 */ 
function showGrandTotal() { 
    var gtotal = 0; 
 
    // --- Sum all item totals --- 
    $('.total').each(function() { 
        var val = parseFloat($(this).val()); 
        if (!isNaN(val)) gtotal += val; 
    }); 
 
    gtotal = gtotal.toFixed(3); 
 
    // --- Update Grand Total display --- 
    if (!isNaN(gtotal)) { 
        $('#grandT').html(gtotal); 
    } else { 
        $('#grandT').html('00.000'); 
        gtotal = 0; 
    } 
 
    // --- Recalculate VAT and Net Total --- 
    calculateVAT(); 
    showNetAmount(); 
} 
 
 
/** 
 * calculateVAT() 
 * → Automatically calculates VAT based on current Grand Total (if VAT enabled). 
 * → Updates #vatamount input field. 
 */ 
function calculateVAT() { 
    var grandTotal = parseFloat($('#grandT').text()) || 0; 
    var vatRate = 0.05; // Default 5% 
 
    if ($('#vatoption1').is(':checked')) { 
        var vatAmount = grandTotal * vatRate; 
        $('#vatamount').val(vatAmount.toFixed(3)); 
    } else { 
        $('#vatamount').val('0.000'); 
    } 
} 
 
 
/** 
 * showNetAmount() 
 * → Always calculates and updates Net Total = Grand Total + VAT (only if VAT enabled). 
 * → Reads current values directly from DOM. 
 */ 
function showNetAmount() { 
    var grandTotal = parseFloat($('#grandT').text()) || 0; 
    var vatAmount = 0; 
 
    if ($('#vatoption1').is(':checked')) { 
        vatAmount = parseFloat($('#vatamount').val()) || 0; 
    } 
 
    var netTotal = grandTotal + vatAmount; 
    $('#netT').html(netTotal.toFixed(3)); 
} 
 
 

function delRow(row){
	if($('.dup_row').length>1){
		$(row).parents('tr').remove();
		showGrandTotal();
	}
	
}

