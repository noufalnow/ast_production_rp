function fixmainhead(){
	
	if($('#f_mainhead').val()==1){
		$('#mh_emp').show();
		$('#mh_prop').hide();
		$('#mh_veh').hide();
	}
	else if($('#f_mainhead').val()==2){
		$('#mh_prop').show();
		$('#mh_emp').hide();
		$('#mh_veh').hide();
	}
	else if($('#f_mainhead').val()==3){
		$('#mh_veh').show();
		$('#mh_emp').hide();
		$('#mh_prop').hide();
	}
	else{
		$('#mh_emp').hide();
		$('#mh_prop').hide();
		$('#mh_veh').hide();
	}
}
</script>

